//! base 0.1.0
package 'IfExpression'
  model 'IfExpression' "Conditional value with if-expression"
    parameter Real 'threshold' = 0.5;
    Real 'x'(start = 0.0);
    Real 'y';
  initial equation
    'x' = 1.0;
  equation
    der('x') = -0.3 * 'x';
    'y' = if 'x' > 'threshold' then 'x' ^ 2 else 0.5 * 'x';
  end 'IfExpression';
end 'IfExpression';
