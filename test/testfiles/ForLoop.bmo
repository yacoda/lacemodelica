//! base 0.1.0
package 'ForLoop'
  model 'ForLoop' "Test model with for loop in equations"
    parameter Real 'alpha' = 0.5 "Decay coefficient";

    Real 'x'[3](fixed = true, start = 0.0) "State vector";
    Real 'y' "Output";

  equation
    for i in 1:3 loop
      der('x'[i]) = -'alpha' * 'x'[i];
    end for;
    'y' = 'x'[1] + 'x'[2] + 'x'[3];

  end 'ForLoop';
end 'ForLoop';
