//! base 0.1.0
package 'ifEquation_01'
  model 'M'
    Real 'x';
  equation
    if time < 0.5 then
      'x' = 1.0;
    else
      'x' = 2.0;
    end if;
  end 'M';
end 'ifEquation_01';

