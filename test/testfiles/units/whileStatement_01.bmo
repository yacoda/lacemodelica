  function 'count_down'
    input Real 'start';
    output Real 'y';
    input Real 'dummy' = 0.0;
  algorithm
    'y' := 'start';
    while 'y' > 1.0 loop
      'y' := 'y' - 1.0;
    end while;
  end 'count_down';
  model 'M'
    Real 'x';
  equation
    'x' = 'count_down'(3.0);
  end 'M';
end 'whileStatement_01';

