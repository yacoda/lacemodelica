//! base 0.1.0
package 'whenStatement_01'
  function 'trigger_action'
    input Real 'cond';
    output Real 'y';
  algorithm
    'y' := 0.0;
    when 'cond' > 0.5 then
      'y' := 1.0;
    end when;
  end 'trigger_action';
  model 'M'
    Real 'x';
  equation
    'x' = 'trigger_action'(0.7);
  end 'M';
end 'whenStatement_01';

