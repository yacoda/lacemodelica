//! base 0.1.0
package 'AlgorithmIfStatementNoElse'
  // Function with if-statement that only has a then branch (no else)
  pure function 'clampPositive' "Clamp negative values to zero"
    input Real 'x';
    output Real 'result';
  algorithm
    'result' := 'x';
    if 'x' < 0 then
      'result' := 0;
    end if;
  end 'clampPositive';

  model 'AlgorithmIfStatementNoElse' "Model using function with if-no-else"
    Real 'x'(start = 1.0);
    Real 'clampedX';
  equation
    der('x') = -0.5;
    'clampedX' = 'clampPositive'('x');
  end 'AlgorithmIfStatementNoElse';
end 'AlgorithmIfStatementNoElse';
